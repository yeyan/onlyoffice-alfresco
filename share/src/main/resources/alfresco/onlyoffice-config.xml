<alfresco-config>

    <config evaluator="string-compare" condition="DocLibActions">
        <actions>
            <action id="document-onlyoffice-edit" type="link" label="actions.document.onlyoffice-edit">
                <param name="href">onlyoffice-edit?nodeRef={node.nodeRef}</param>
                <param name="target">_blank</param>
                <permissions>
                    <permission allow="true">Write</permission>
                </permissions>
            </action>
        </actions>
        <actionGroups>
            <actionGroup id="document-browse">
                <action index="90" id="document-onlyoffice-edit" />
            </actionGroup>
            <actionGroup id="document-details">
                <action index="90" id="document-onlyoffice-edit" />
            </actionGroup>
        </actionGroups>
    </config>

    <!-- Renders can not be overrided
    <config evaluator="string-compare" condition="DocLibCustom">
        <dependencies>
            <js src="/components/documentlibrary/actions/onlyoffice-actions.js" />
        </dependencies>
    </config>
    -->

</alfresco-config>
